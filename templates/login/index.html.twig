{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}
{% block stylesheets %}
    <style>
        body {
            height: 100%;
        }
    </style>
{% endblock %}

{% block body %}

<div class="container-fluid h-100">
    <div class="row h-100">
        <div class="col-12 h-100">
            <div class="row h-100 d-flex align-items-center">
                <div class="mask-custom offset-4 col-4 rounded-4 pb-2">
                    <h1 class="text-center mt-2">Connexion</h1>
                    <hr>
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    <form method="post" action="{{ path('app_login') }}">
                        <div>
                            <label for="exampleInputEmail1" class="form-label">Adresse email</label>
                            <input required type="email" name="_username" class="form-control form-control-sm" placeholder="john.doe@gmail.com" id="exampleInputEmail1" aria-describedby="emailHelp" value="{{ last_username }}">
                            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                        </div>

                        <div class="mt-3">
                            <label for="exampleInputPassword1" class="form-label">Mot de passe</label>
                            <input required type="password" name="_password" class="form-control form-control-sm" placeholder="Mot de passe" id="exampleInputPassword1">
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <button type="submit" class="btn btn-sm btn-outline-primary float-end mt-3">Connexion</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
